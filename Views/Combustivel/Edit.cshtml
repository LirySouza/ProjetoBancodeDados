@model ProjetoBancodeDados.Models.Combustivel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Combustível</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeCombustivel" class="control-label">Nome do Combustível</label>
                <input asp-for="NomeCombustivel" class="form-control" type="number" />
                <span asp-validation-for="NomeCombustivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCombustivel" class="control-label">Tipo do Combustível</label>
                <input asp-for="TipoCombustivel" class="form-control" />
                <span asp-validation-for="TipoCombustivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoCombustivel" class="control-label">Preço do Combustível</label>
                <input asp-for="PrecoCombustivel" class="form-control" type="number" />
                <span asp-validation-for="PrecoCombustivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-primary" asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
