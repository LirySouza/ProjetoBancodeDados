@model ProjetoBancodeDados.Models.Compras

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Compras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ValorCompra" class="control-label">Valor da Compra</label>
                <input asp-for="ValorCompra" class="form-control" type="number" />
                <span asp-validation-for="ValorCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FornecedoresId" class="control-label">Nome do Fornecedor</label>
                <select asp-for="FornecedoresId" class="form-control" asp-items="ViewBag.FornecedoresId"></select>
                <span asp-validation-for="FornecedoresId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-primary" asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
