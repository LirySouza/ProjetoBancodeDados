@model ProjetoBancodeDados.Models.Vendas

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Vendas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeLitros" class="control-label"></label>
                <input asp-for="QuantidadeLitros" class="form-control" />
                <span asp-validation-for="QuantidadeLitros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BombaId" class="control-label"></label>
                <select asp-for="BombaId" class="form-control" asp-items="ViewBag.BombaId"></select>
                <span asp-validation-for="BombaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CombustivelId" class="control-label"></label>
                <select asp-for="CombustivelId" class="form-control" asp-items="ViewBag.CombustivelId"></select>
                <span asp-validation-for="CombustivelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionariosId" class="control-label"></label>
                <select asp-for="FuncionariosId" class="form-control" asp-items="ViewBag.FuncionariosId"></select>
                <span asp-validation-for="FuncionariosId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
