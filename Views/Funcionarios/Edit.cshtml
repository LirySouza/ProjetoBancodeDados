@model ProjetoBancodeDados.Models.Funcionarios

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Funcionários</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeFuncionario" class="control-label">Nome do Funcionário</label>
                <input asp-for="NomeFuncionario" class="form-control" />
                <span asp-validation-for="NomeFuncionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CargoFuncionario" class="control-label">Cargo do Funcionário</label>
                <input asp-for="CargoFuncionario" class="form-control" />
                <span asp-validation-for="CargoFuncionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-primary" asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
